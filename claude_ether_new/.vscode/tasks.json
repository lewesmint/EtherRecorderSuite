{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean and Build All (Debug)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Clean platform_layer (Debug)",
        "Clean claude_ether_new (Debug)",
        "Build platform_layer (Debug)",
        "Build claude_ether_new (Debug)"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clean and Build All (Release)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Clean platform_layer (Release)",
        "Clean claude_ether_new (Release)",
        "Build platform_layer (Release)",
        "Build claude_ether_new (Release)"
      ],
      "group": "build"
    },
    {
      "label": "Clean platform_layer (Debug)",
      "type": "shell",
      "command": "rm -rf ../platform_layer/build/windows-arm64/Debug/*",
      "problemMatcher": []
    },
    {
      "label": "Clean claude_ether_new (Debug)",
      "type": "shell",
      "command": "rm -rf build/windows-arm64/Debug/*",
      "problemMatcher": []
    },
    {
      "label": "Build platform_layer (Debug)",
      "type": "shell",
      "command": "cmake --preset windows-arm64-debug && cmake --build --preset windows-arm64-debug",
      "options": {
        "cwd": "${workspaceFolder}/../platform_layer"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Build claude_ether_new (Debug)",
      "type": "shell",
      "command": "cmake --preset windows-arm64-debug && cmake --build --preset windows-arm64-debug",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Clean platform_layer (Release)",
      "type": "shell",
      "command": "rm -rf ../platform_layer/build/windows-arm64/Release/*",
      "problemMatcher": []
    },
    {
      "label": "Clean claude_ether_new (Release)",
      "type": "shell",
      "command": "rm -rf build/windows-arm64/Release/*",
      "problemMatcher": []
    },
    {
      "label": "Build platform_layer (Release)",
      "type": "shell",
      "command": "cmake --preset windows-arm64-release && cmake --build --preset windows-arm64-release",
      "options": {
        "cwd": "${workspaceFolder}/../platform_layer"
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "Build claude_ether_new (Release)",
      "type": "shell",
      "command": "cmake --preset windows-arm64-release && cmake --build --preset windows-arm64-release",
      "problemMatcher": ["$msCompile"]
    }
  ]
}
