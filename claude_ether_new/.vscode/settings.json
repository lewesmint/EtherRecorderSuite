{
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.configureOnOpen": true,
    "cmake.exportCompileCommandsFile": true,
    "cmake.buildDirectory": "${workspaceFolder}/build/${variant:buildType}",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "cmake.sourceDirectory": "${workspaceFolder}",

    // PLATFORM_SWITCH_START
    // MacOS Configuration
    "C_Cpp.default.compilerPath": "/usr/bin/clang",
    "C_Cpp.default.intelliSenseMode": "macos-clang-arm64",

    // Windows Configuration
    //"C_Cpp.default.compilerPath": "${command:cmake.activeConfigurePreset.compilerPath}",
    //"C_Cpp.default.intelliSenseMode": "windows-msvc-arm64",
    // PLATFORM_SWITCH_END

    "cmake.defaultVariants": {
        "buildType": {
            "default": "macos-arm64-debug",
            "description": "The build type.",
            "choices": {
                "macos-arm64-debug": {
                    "short": "Mac ARM64 Debug",
                    "long": "MacOS ARM64 Debug",
                    "buildType": "Debug"
                },
                "macos-arm64-release": {
                    "short": "Mac ARM64 Release",
                    "long": "MacOS ARM64 Release",
                    "buildType": "Release"
                }
            }
        }
    }
}
