{
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.default.cStandard": "c17",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "cmake.configureOnOpen": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/inc",
        "${workspaceFolder}/windows/inc",
        "${workspaceFolder}/posix/inc",
        "${workspaceFolder}/macos/inc"
    ],
    "C_Cpp.default.compilerPath": "${command:cmake.activeConfigurePreset.compilerPath}",
    "C_Cpp.default.intelliSenseMode": "windows-msvc-arm64"
}
