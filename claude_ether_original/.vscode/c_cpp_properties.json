{
    "version": 4,
    "configurations": [
        {
            "name": "Mac ARM64",
            "includePath": [
                "${workspaceFolder}/inc/**",
                "${workspaceFolder}/../platform_layer/inc/**"
            ],
            "defines": [
                "MACOS=1",
                "_DARWIN_C_SOURCE",
                "DEBUG"
            ],
            "macFrameworkPath": [
                "/System/Library/Frameworks",
                "/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/clang",
            "cStandard": "c17",
            "intelliSenseMode": "macos-clang-arm64",
            "configurationProvider": "ms-vscode.cmake-tools"
        },
        {
            "name": "Win32 ARM64",
            "includePath": [
                "${workspaceFolder}/inc/**",
                "${workspaceFolder}/../platform_layer/inc/**"
            ],
            "defines": [
                "WIN32=1",
                "_WIN32_WINNT=0x0600",
                "NOMINMAX",
                "WIN32_LEAN_AND_MEAN"
            ],
            "windowsSdkVersion": "10.0.22000.0",
            "compilerPath": "cl.exe",
            "cStandard": "c17",
            "intelliSenseMode": "windows-msvc-arm64",
            "configurationProvider": "ms-vscode.cmake-tools"
        }
    ]
}
